<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/head.ejs') -%>
  <body>
    <%- include('layouts/navigation.ejs') -%>
 

    <!-- if data is undefine or null then this block will not run -->
    <% if (val) { %>

      <h1 id="g2_booking_heading">PLEASE APPLY FOR G2-LICENSE EXAM FIRST</h1>
      <a id="g2_booking_heading_link" href="/g2_page">BOOK G2-EXAM NOW</a>

      <%}%>

    <% if (data) { %>

    <div class="container login-container">
      <div class="row">
        <div class="col-md-6 login-form-1">
          <h3 id="head_book">Update Details</h3>
          <br />
          <form action="/g2_page/receive_data/update_data" method="POST">
            <div class="mb-3 row">
              <label for="f_Name">First Name</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  value="<%= data.f_Name%>"
                  id="f_Name"
                  name="f_Name"
                  onkeydown="return false;"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="l_Name">Last Name</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="l_Name"
                  name="l_Name"
                  value="<%= data.l_Name%>"
                  onkeydown="return false;"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="license_no" class="col-sm-2 col-form-label"
                >License Number</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="license_no"
                  name="license_no"
                  value="<%= data.license_no%>"
                  onkeydown="return false;"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="age" class="col-sm-2 col-form-label">age</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="age"
                  name="age"
                  value="<%= data.age%>"
                  onkeydown="return false;"
                />
              </div>
            </div>

            <div class="mb-3 row">
              <label for="date_of_birth" class="col-sm-2 col-form-label"
                >Date of Birth(DOB)</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="date_of_birth"
                  name="date_of_birth"
                  value="<%= data.date_of_birth%>"
                  onkeydown="return false;"
                />
              </div>
            </div>
           






            <br />
            <br />

            <h3> Your Appointment date and time</h3>
            <br />
           
            
            <div class="mb-3 row">
              <label for="age" class="col-sm-2 col-form-label">date</label>
              <div class="col-sm-10">
            <input
            type="text"
            class="form-control"
            id="available_date"
            name="available_date"
            value="<%= data.
            appointment_date%>"
            onkeydown="return false;"
         
            />
            </div></div>


            
            <div class="mb-3 row">
              <label for="age" class="col-sm-2 col-form-label">Time</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="available_date"
                  name="available_time"
                  value="<%= data.
                  appointment_time%>"
                  onkeydown="return false;"
                />
              </div>
            </div>
            
           






<br>
<br>











            <br />
            <h3>Car details</h3>
            <br />

            <div class="mb-3 row">
              <label for="description" class="col-sm-2 col-form-label"
                >description</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="description"
                  name="description"
                  value="<%= data.description%>"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="model_type" class="col-sm-2 col-form-label"
                >model</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="model_type"
                  name="model_type"
                  value="<%= data.model_type%>"
                />
              </div>
            </div>

            <div class="mb-3 row">
              <label for="year" class="col-sm-2 col-form-label">Year</label>
              <div class="col-sm-10">
                <input
                  type="number"
                  class="form-control"
                  min="1800"
                  max="2100"
                  id="year"
                  name="year"
                  value="<%= data.year%>"
                />
              </div>
            </div>

            <div class="mb-3 row">
              <label for="plat_number">plat Number</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  name="plat_number"
                  id="plat_number"
                  
                  value="<%= data.plat_number%>"
                />
              </div>
            </div>

            <br />
            <div class="form-group">
              <input type="submit" class="btn btn-primary" value="Update" />
            </div>
          </form>
        </div>
      </div>
    </div>

    <% } %>
  </body>
</html>
